<!-- filter area starts here -->

<div id="filter-wrapper">
  <div class="title-heading"> <span class="title-filter-left">Filter</span> <span class="title-filter-right reset-all">Reset All</span> </div>
  <div id="product-filter-wrapper">
    <div class="filter-bar-box">
      <h4> All Results <span class="reset-link"></span></h4>
      <div class="toggle-box">
        <div class="scroller-bystyle" >
          <ul>
            <li>
              <input type="checkbox" value="products" class="choose-option" id="getProducts">
              <label for="getProducts"> products ({{hits.total}}) </label>
            </li>
            <li>
              <input type="checkbox" value="events" class="choose-option" id="getEvents">
              <label for="getEvents"> events (<span id="eventsCount">0</span>) </label>
            </li>
          </ul>
        </div>
      </div>
      <h4 id="popularKeywords"> Popular Keywords <span class="reset-link"></span></h4>
      <div class="toggle-box">
        <div class="scroller-bystyle" >
          <div class="results styles display-hidden" id="showTopKeywords"></div>
        </div>
      </div>
      <!-- {{#if aggregations}}
