      <div class="toggle-box price" data-filter-name="{{filterName}}" data-filter-type="{{filterType}}">
        <div class="scroller-bystyle">
          <p>
            <label for="amount">Price Range:</label>
            <input type="text" id="amount">
          </p>
          <div id="slider-range"></div>
          <div class="price-min-max">
