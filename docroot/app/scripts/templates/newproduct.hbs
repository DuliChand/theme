<div class="product-detail-area">
  <div class="row" id="product-area">
    <!-- product gallery starts here -->
    <div class="gallery-column">
      <div class="product-gallery">
        <!-- product gallery thumb nails starts here -->
        <!-- <div id="product-gallery-thumbnails" class="gallery-thumbnails">
