{{#each productVariants}}
	{{#if selected}}
<div class="product-detail-area">
	<div class="row" id="product-area">
<!-- product detail info starts here -->
		<div class="product-info-column">
			<div class="product-detail-info"
				data-product-id="{{productVariants.webShopVariantId}}">
				<h2 class="product-name">{{title}}</h2>
				<div class="code-area">
					<span class="product-code">{{getProductCode description}}</span>
					<span class="product-timer" id="productEventTimer" data-expire-datetime="">0 DAYS 00:00:00 LEFT</span>
				</div>
				<div class="productdetail-holder">
				<div class="productdetail-left">
				<div class="pricing-area">
					<span class="old-pricing">{{sellerSKUs.currencyCode}}
						{{sellerSKUs.0.mrp}}</span> <span
						class="new-pricing">INR
						<span id="newPrice">{{sellerSKUs.0.sp}}</span></span>
						
						
					<!-- <div class="logos-area">
						{{#if product.deliveryMode}}
						<div class="logosholder">
							<div class="express"></div>
							<div class="logocontent">Express Delivery. Shipped directly
								from our warehouse.</div>
						</div>
						<div class="logosholder">
							<div class="international"></div>
							<div class="logocontent">World's best finds. Imported
								especially for you.</div>
						</div>
						<div class="daycount">
							<a href="#" class="shipping-info {{product.deliveryMode}}">{{vendorProductWrapper.vendorProduct.shipmentType}}
								{{vendorProductWrapper.vendorProduct.product.deliveryTime}}</a>
						</div>
						{{/if}}
					</div> -->
				</div>
				{{#if .liveinventory.attributes
				}} 
					{{#each vendorProductWrapper.liveinventory.attributes}}
					{{#lowerEqual name "size"}}
					<div class="selection-area">
						<div class="select-choice {{toLowerCase name}}" data-attribute-id="{{attributeId}}" data-attribute-name="{{name}}">
							<label class="label">Select {{toLowerCase name}}</label> 
							{{#if attributeValues}}
							<ul>
								{{#each attributeValues}}
								{{#notLowerEqual value 'na'}}
									<li class="tiles" data-attribute-value="{{value}}" data-attribute-value-id="{{attributeValueId}}" data-attribute-erpsku-id="{{erpSku}}">
									{{#equal quantity 0}}
										<span class="sold">{{toLowerCase value}}</span>
									{{else}}
										<a href="#">{{toLowerCase value}}</a>
									{{/equal}}
									</li>
								{{/notLowerEqual}}
								{{/each}}
							</ul>
							{{/if}}
						</div>
					</div>
					{{else}}
					<div class="selection-area">
						<div class="select-choice {{toLowerCase name}}"
							data-attribute-id="{{attributeId}}" data-attribute-name="{{name}}" >
							<label class="label">Select {{toLowerCase name}}</label> {{#if
							attributeValues}}
							<ul>
								{{#each attributeValues}}
								<li class="tiles" data-attribute-value="{{value}}"
									data-attribute-value-id="{{attributeValueId}}" data-attribute-erpsku-id="{{erpSku}}"><a
									href="javascript:void(0);">{{toLowerCase value}}</a></li> {{/each}}
							</ul>
							{{/if}}
						</div>
					</div>
					{{/lowerEqual}}
					{{/each}} 
				{{/if}}

				<div class="selection-area">
					<div class="select-quantity quantity">
						<label class="label">Select Quantity</label>
						<div class="select-wrapper">
							<select class="select">
								<option value="0">0</option>
							</select>
						</div>
					</div>
					<!-- <div class="check-avalible">
						<p>Check product availability at your location</p>
						<div class="checkservice" id="checkservice">
							<input type="text" id="pincode" value="" />
							<a href="#" class="go">Check</a>
							<span class="statusmsg"><span class="icon"></span><span class="text"></span></span>
						</div>
						<div class="clear"></div>
					</div> -->
				</div>
				
				<!-- Promotion will come from liferay WCM Start -->
