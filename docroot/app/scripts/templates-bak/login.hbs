<div id="loginarea">
	<h2>Login</h2>
	<div class="reg-form">
		<form method="post" id="login_form">
		<div class="error_Container"></div>
			<div class="control-group">
				<div class="controls row clear">
					<label for="loginId">Username :</label>
					<input type="text" name="loginId" id="loginId" data-error-style="inline" class="textfield" placeholder="Email Address / Username / Mobile Number" />
				</div>
			</div>
			<div class="control-group">
				<div class="controls row clear">
					<label for="password">Password :</label>
					<input type="password" name="password" id="password" data-error-style="inline" class="textfield" placeholder="***********" />
				</div>
			</div>
			<!-- <a href="#" class="btn-cartpop">Login</a> -->
			<input type="submit" id="registerUser" value="Login" class="btn-cartpop" />
			<a href="/forgot-password" class="forgot-link">Forgot Password</a>
	
			<p>
				<span>OR Login with</span>
				<a href="#" class="iconfacebook fb-icon" id="facebook_login_button">&nbsp;</a>
				<a href="#" class="icongoogleplus" id="gmail_login_button">&nbsp;</a>
				<!-- <a href="#" class="icontwitter"></a> -->
			</p>
			<a href="/register" class="btn-cartpop">Register Me</a>
			<div class="clearfix"></div>
		</form>
	</div>
</div>
